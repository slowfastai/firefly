{
  "name": "firefly",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@10.18.3",
  "scripts": {
    "dev": "pnpm --filter @app/desktop dev",
    "dev:all": "concurrently -k -n backend,desktop \"pnpm --filter @app/backend dev\" \"pnpm --filter @app/desktop dev\"",
    "dev:desktop": "pnpm --filter @app/desktop dev",
    "dev:backend": "pnpm --filter @app/backend dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format"
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}
